{
    "maxerr"        : 50,
    "indent"        : 4,

    // Environments
    "node"          : true,
    "browser"       : true,

    // Enforcing
    "bitwise"       : true,
    "camelcase"     : true,
    "curly"         : true,
    "eqeqeq"        : true,
    "immed"         : true,
    "newcap"        : true,
    "noarg"         : true,
    "quotmark"      : "single",
    "undef"         : true,
    "unused"        : "vars",
    "strict"        : true,
    "trailing"      : true,

    // Relaxing
    "esnext"        : true,
    "smarttabs"     : true,

    // Custom Globals
    "globals"       : {
        "require"   : true,
        "define"    : true,
        "window"    : true,
        "navigator" : true
    }
}
